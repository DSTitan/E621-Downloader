{
    "name": "fluffy-fetcher",
    "version": "1.5.0",
    "description": "Quickly fetch and download e926 & e621 posts by specific tags.",
    "author": "DSTitan",
    "homepage": ".",
    "main": "build/electron/main.js",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/electron-devtools-installer": "^2.2.2",
        "@types/jest": "^29.4.0",
        "@types/node": "^18.13.0",
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "axios": "^1.3.6",
        "dot-object": "^2.1.4",
        "electron-devtools-installer": "^3.2.0",
        "electron-reload": "^1.5.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.8.0",
        "react-scripts": "5.0.1",
        "react-select": "^5.7.2",
        "type-detect": "^4.0.8",
        "typescript": "^4.9.5",
        "web-vitals": "^3.1.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "postinstall": "electron-builder install-app-deps",
        "program:dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://127.0.0.1:3000 && tsc -p electron -w\" \"wait-on http://127.0.0.1:3000 && tsc -p electron && electron .\"",
        "program:build": "yarn build && tsc -p electron && electron-builder",
        "eject": "react-scripts eject"
    },
    "build": {
        "icon": "public/media/logo.ico",
        "appId": "com.fluffyfetcher.dstitan",
        "productName": "Fluffy Fetcher",
        "extends": null,
        "win": {
            "target": [
                {
                    "target": "portable"
                }
            ]
        },
        "files": [
            "build/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        }
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/dot-object": "^2.1.2",
        "@types/type-detect": "^4.0.1",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "electron": "^23.1.0",
        "electron-builder": "^23.6.0",
        "wait-on": "^7.0.1"
    }
}
